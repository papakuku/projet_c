






           | premiere etape |







CC=gcc
EXEC=prog

all : $(EXEC)

$(EXEC) : main.o player.o
	$(CC) -o $(EXEC) player.o main.o

main.o : main.c
	$(CC) -o main.o -c main.c

player.o : player.c
	$(CC) -o player.o -c player.c


clean :
	rm -rf *.o

mrproper: clean
	rm -rf prog




-----------------------------------------------------------------------------------------------------


              | 2eme etape |




#variables special:  $@ nom cible /  $< nom premiere dependance / $^ liste dependance / $? liste dependance plus recent que lq cible / $* nom fichier sans son extension:




CC=gcc
EXEC=prog
SRC= $(wildcard *.c)
OBJ= $(SRC:.c=.o)



all : $(EXEC)


%.o :  %.c
	$(CC) -o $@ -c $<

$(EXEC) : $(OBJ)
	$(CC) -o $@ $^


clean:
	rm -r *.o

mrproper: clean
	rm -r prog










































































